<script>
$(document).ready(function(){
    makeEnterClick();
    focusCursorOnInput();
});

function makeEnterClick() {
    $('#returnArticleId').keypress(function (e) {
        var key = e.which;
        if(key == 13) {
            $('#newReturnSoldButton').click();
            return false;  
        }
    });
}

function focusCursorOnInput() {
    $('#returnArticleId').focus();
}

</script>

<style>
    #newReturnSoldButton {
        width:100px;
    }

    #returnArticleId{
        height: 23px;
        width: 10%;
    }

</style>


<style>
.providers_container{
    height: 700px;
    overflow-y: auto;
}
.submit_search {
    cursor: pointer;
}
</style>
<script>
  $(document).ready(function(){
    $('table#providers').sieve();
  });
</script>
<h3> Proveedores </h3>

<div class="providers_container">
    
    <p id="notice"><%= notice %></p>

    <table id="providers">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Dirección</th>
                <th>Documento</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @providers.each do |provider| %>
            <tr>
                <td><%= provider.name %></td>
                <td><%= provider.lastname %></td>
                <td><%= provider.phone %></td>
                <td><%= provider.email %></td>
                <td><%= provider.address %></td>
                <td><%= provider.ci %></td>
                <td><%= link_to image_tag('show.png', size: "16x16"), provider %></td>
                <td><%= link_to image_tag('edit.png', size: "16x16"), edit_provider_path(provider) %></td>
                <td><%= link_to image_tag('delete.png', size: "16x16"), provider,  method: :delete, data: { confirm: 'Esta seguro/a?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<%= button_to 'Nuevo Proveedor', new_provider_path, :method => "get", :class => 'new_provider_btn' %>
